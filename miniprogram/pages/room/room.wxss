/* miniprogram/pages/room/room.wxss */
.room-container {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.room-title {
    margin-top: 100rpx;
    font-size: 70rpx;
}
.room-host {
    display: flex;
    align-items: center;
    margin-top: 50rpx;
    color: #999999;
}
.room-host_image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}
.action-area {
    margin-top: 50rpx;
}

.room-users {
    margin-top: 100rpx;
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.room-users_item {
    text-align: center;
    width: 25%;
    height: 270rpx;
}
.room-users_item_image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}